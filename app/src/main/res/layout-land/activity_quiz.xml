<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    tools:context=".QuizActivity">

    <Button
        android:id="@+id/btn_share_quiz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:backgroundTint="#FAF6F6"
        android:foreground="@drawable/ic_baseline_share_24"
        android:foregroundTint="#000000"
        android:textColorLink="#FBF8F8"
        app:layout_constraintStart_toEndOf="@+id/btn_back_quiz"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FDF7F7"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_back_quiz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:foreground="@drawable/ic_baseline_backspace_24"
        android:foregroundTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/choice_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="درست حرف کا انتخاب کریں"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/option_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="@string/p"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/option_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_sentence"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/option_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="@string/cy"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_b" />

    <ImageView
        android:id="@+id/img_quiz"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_sentence"
        app:srcCompat="@drawable/joker" />

    <Button
        android:id="@+id/option_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:text="@string/zo"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/option_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_sentence"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/option_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:text="@string/hm"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_a" />

</androidx.constraintlayout.widget.ConstraintLayout>